{
    // Description
    "name": "Chrome NoFlo test",
    "description": "Trying stuff out",
    "version": "0.0.1",
    "author": "Jesus Fucking Christ",

    "manifest_version": 2,

    "offline_enabled": true,

    // Permissions
    "sockets": {
        "tcpServer": {
            "listen": "0.0.0.0:5555"
        },
        "tcp": {
            "connect": "*"
        }
    },
    "permissions": [
        "tcp-connect",
        "tcp-listen",
        "system.cpu"
    ],

    // Content
    "app": {
        "background": {
            "scripts": ["background.js"]
        }
    }
}
